Container(
    transform: (
        id: "background",
        anchor: Middle,
        stretch: XY( x_margin: 0., y_margin: 0., keep_aspect_ratio: false),
        width: 20.,
        height: 20.,
    ),
    background: SolidColor(1.0, 0.0, 0.0, 1.0),
    children: [
        Container(
            transform: (
                id: "container_start_button",
                width: 200.,
                height: 100.,
                anchor: Middle,
            ),
            background: SolidColor(0.0, 0.0, 0.0, 0.0),
            children: [
                Button(
                    transform: (
                        id: "start_button",
                        width: 600.,
                        height: 200.,
                        anchor: Middle,
                        mouse_reactive: true,
                    ),
                    button: (
                        text: "BEGIN",
                        font: File("font/square.ttf", ("TTF", ())),
                        font_size: 200.,
                        normal_text_color: (0.0, 1.0, 1.0, 1.0),
                        normal_image: SolidColor(0.0, 0.0, 0.0, 0.0),
                        hover_image: SolidColor(1.0, 1.0, 1.0, 1.0),
                        press_image: SolidColor(0.0, 0.0, 0.0, 1.0),
                    )
                ),
                Label(
                    transform: (
                        id: "info_top",
                        width: 700.,
                        height: 250.,
